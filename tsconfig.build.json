{
    "compilerOptions": {
        "module": "commonjs",
        "strict": true,
        "baseUrl": "./",
        "outDir": "dist",
        "removeComments": true,
        "experimentalDecorators": true,
        "target": "es6",
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "importHelpers": true,
        "types": [
            "node",
            "mocha"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "paths": {
            "@src/*": [ "src/*" ]
        }
    },
    "include": [
        "./src/**/*.ts",
    ],
    "exclude": [
        "./src/public/"
    ]
}